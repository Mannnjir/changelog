<div id='release-notes' class='changelog-container'>
  <h2>Release notes</h2>
  <% if @relese_notes.present? %>
    <% @relese_notes.each do |release| %>
      <h3><%= release[:version] %></h3>
      <%= render 'release_version_details', :user_stories => release[:user_stories][:features], :story_type => 'Features' %>
      <%= render 'release_version_details', :user_stories => release[:user_stories][:bugs], :story_type => 'Bugfixes' %>
    <% end %>
  <% else %>
    <b>Currently there is no release information available!</b>
  <% end %>
</div>